{
    "name": "terrys-todos",
    "displayName": "Terry's Todos",
    "description": "An easy way to keep track of your todos",
    "version": "2.0.3",
    "icon": "resources/terrys-todos.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/MaruTerry/terrys-todos"
    },
    "pricing": "Free",
    "license": "SEE LICENSE IN LICENSE.txt",
    "publisher": "terrys-tools",
    "author": {
        "name": "MaruTerry"
    },
    "engines": {
        "vscode": "^1.84.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "terrys-todos.createTodo",
                "title": "Create Todo",
                "icon": "resources/add.svg"
            },
            {
                "command": "terrys-todos.refreshTodos",
                "title": "Refresh",
                "icon": "resources/refresh.svg"
            },
            {
                "command": "terrys-todos.setTodoDone",
                "title": "Mark as done"
            },
            {
                "command": "terrys-todos.setTodoNotDone",
                "title": "Mark as not done"
            },
            {
                "command": "terrys-todos.editTodo",
                "title": "Edit"
            },
            {
                "command": "terrys-todos.deleteTodo",
                "title": "Delete"
            },
            {
                "command": "terrys-todos.deleteAllNotDoneTodos",
                "title": "Delete All",
                "icon": "resources/trash.svg"
            },
            {
                "command": "terrys-todos.deleteAllDoneTodos",
                "title": "Delete All",
                "icon": "resources/trash.svg"
            },
            {
                "command": "terrys-todos.toggleDates",
                "title": "Toggle Dates"
            },
            {
                "command": "terrys-todos.createBaseFolder",
                "title": "Create Folder",
                "icon": "resources/add.svg"
            },
            {
                "command": "terrys-todos.createFolder",
                "title": "Create Folder"
            },
            {
                "command": "terrys-todos.editFolderLabel",
                "title": "Edit"
            },
            {
                "command": "terrys-todos.deleteFolder",
                "title": "Delete"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "terrys-todos",
                    "title": "Terry's Todos",
                    "icon": "resources/terrys-todos.svg"
                }
            ]
        },
        "views": {
            "terrys-todos": [
                {
                    "id": "todos-tree",
                    "name": "Todos",
                    "type": "tree"
                },
                {
                    "id": "done-todos-tree",
                    "name": "Done Todos",
                    "type": "tree"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "terrys-todos.createTodo",
                    "when": "view == todos-tree",
                    "group": "navigation"
                },
                {
                    "command": "terrys-todos.refreshTodos",
                    "when": "view == todos-tree || view == done-todos-tree"
                },
                {
                    "command": "terrys-todos.deleteAllNotDoneTodos",
                    "when": "view == todos-tree"
                },
                {
                    "command": "terrys-todos.deleteAllDoneTodos",
                    "when": "view == done-todos-tree"
                },
                {
                    "command": "terrys-todos.toggleDates",
                    "when": "view == todos-tree || view == done-todos-tree"
                },
                {
                    "command": "terrys-todos.createBaseFolder",
                    "when": "view == todos-tree",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "terrys-todos.setTodoDone",
                    "when": "view == todos-tree && viewItem === todo",
                    "group": "1"
                },
                {
                    "command": "terrys-todos.setTodoNotDone",
                    "when": "view == done-todos-tree && viewItem === doneTodo",
                    "group": "1"
                },
                {
                    "command": "terrys-todos.editTodo",
                    "when": "(view == todos-tree && viewItem === todo) || (view == done-todos-tree && viewItem === doneTodo)",
                    "group": "2"
                },
                {
                    "command": "terrys-todos.deleteTodo",
                    "when": "(view == todos-tree && viewItem === todo) || (view == done-todos-tree && viewItem === doneTodo)",
                    "group": "2"
                },
                {
                    "command": "terrys-todos.createFolder",
                    "when": "(view == todos-tree && viewItem === folder) || (view == done-todos-tree && viewItem === folder)",
                    "group": "1"
                },
                {
                    "command": "terrys-todos.editFolderLabel",
                    "when": "(view == todos-tree && viewItem === folder) || (view == done-todos-tree && viewItem === folder)",
                    "group": "2"
                },
                {
                    "command": "terrys-todos.deleteFolder",
                    "when": "(view == todos-tree && viewItem === folder) || (view == done-todos-tree && viewItem === folder)",
                    "group": "2"
                }
            ]
        },
        "keybindings": [
            {
                "command": "terrys-todos.createTodo",
                "key": "ctrl+alt+t",
                "mac": "cmd+alt+t"
            }
        ],
        "configuration": {
            "title": "terrys-todos",
            "properties": {
                "terrys-todos.data": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "object"
                    },
                    "description": "All data handled by Terry's Todos"
                },
                "terrys-todos.showDates": {
                    "type": "boolean",
                    "default": false,
                    "description": "Booolean to toggle the dates shown as descriptions"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.3",
        "@types/node": "18.x",
        "@types/vscode": "^1.84.0",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "@vscode/test-electron": "^2.3.6",
        "eslint": "^8.52.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "typescript": "^5.2.2"
    }
}
